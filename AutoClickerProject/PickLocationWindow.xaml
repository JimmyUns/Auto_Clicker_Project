<Window x:Class="AutoClickerProject.PickLocationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoClickerProject"
        mc:Ignorable="d"
        Title="PickLocationWindow" Height="450" Width="800"
        WindowState="Maximized"
        AllowsTransparency="True" WindowStyle="None">
    <Window.Background>
        <SolidColorBrush Opacity="0.4" Color="Black"/>
    </Window.Background>
    <Grid>
        <StackPanel Name="picklocationPanel" Background="Black" Opacity="0.3" Height="20" Width="80">
            <TextBlock x:Name="clickLocationTextBlock" Text="Pick location" HorizontalAlignment="Center" Width="66" Height="20" Foreground="#e1e1e1"/>
        </StackPanel>
    </Grid>
</Window>
