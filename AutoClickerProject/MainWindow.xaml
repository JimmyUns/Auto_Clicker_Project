<Window x:Class="AutoClickerProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoClickerProject"
        mc:Ignorable="d"
        Title="MainWindow" ResizeMode="CanMinimize" Height="450" Width="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="310*"/>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="63"/>
        </Grid.RowDefinitions>

        <Button Name="settingsButton" Content="Settings" FontSize="20" BorderThickness="1" Click="startButton_Click"  Grid.ColumnSpan="2" Grid.Row="1"/>

        <Button Name="startButton" Content="Start" FontSize="20" BorderThickness="1" Click="startButton_Click" Grid.Row="2"  Grid.Column="0" />
        <Button x:Name="stopButton" Content="Stop" FontSize="20" BorderThickness="1" Click="stopButton_Click" Grid.Row="2"  Grid.Column="1" />
    </Grid>
</Window>
